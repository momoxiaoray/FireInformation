<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_12">

    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="@dimen/dp_22"
        android:layout_height="@dimen/dp_22"
        android:src="@drawable/ic_user_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_4"
        android:text="啦啦啦啦啦"
        android:textColor="@color/red_400"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="@+id/item_icon"
        app:layout_constraintLeft_toRightOf="@+id/item_icon"
        app:layout_constraintTop_toTopOf="@+id/item_icon" />

    <TextView
        android:id="@+id/item_content_base"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:background="@drawable/bg_dynamic_comment_layout"
        android:padding="@dimen/dp_4"
        android:text=" @laalla："
        android:textColor="@color/grey_600"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_icon" />


    <TextView
        android:id="@+id/item_content"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_4"
        android:text="啦啦啦啦啦啦啦啦啦啦啦啦"
        android:textColor="@color/grey_800"
        android:textSize="@dimen/sp_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_content_base" />


    <TextView
        android:id="@+id/item_btn_add_comment"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_4"
        android:background="@drawable/bg_add_comment"
        android:paddingLeft="@dimen/dp_8"
        android:paddingTop="@dimen/dp_4"
        android:paddingRight="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_4"
        android:text="回复"
        android:textColor="@color/grey_800"
        android:textSize="@dimen/sp_10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/item_content"
        app:layout_constraintTop_toBottomOf="@+id/item_content" />

    <TextView
        android:id="@+id/item_date"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_12"
        android:text="2020-10-10"
        android:textColor="@color/grey_400"
        android:textSize="@dimen/sp_12"
        app:layout_constraintBottom_toBottomOf="@+id/item_btn_add_comment"
        app:layout_constraintLeft_toRightOf="@+id/item_btn_add_comment"
        app:layout_constraintTop_toTopOf="@+id/item_btn_add_comment" />

</androidx.constraintlayout.widget.ConstraintLayout>
