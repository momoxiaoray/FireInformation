<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_100"
    tools:context=".fragment.user.UserFragment">

    <ImageView
        android:id="@+id/user_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_48"
        android:src="@drawable/ic_user_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:text="啦啦啦啦"
        android:textColor="@color/red_500"
        android:textSize="@dimen/sp_18"
        app:layout_constraintBottom_toBottomOf="@+id/user_logo"
        app:layout_constraintLeft_toRightOf="@+id/user_logo"
        app:layout_constraintTop_toTopOf="@+id/user_logo" />


    <TextView
        android:id="@+id/collection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_48"
        android:background="@drawable/bg_button"
        android:drawableRight="@mipmap/ic_next"
        android:padding="@dimen/dp_16"
        android:text="我的收藏"
        android:textColor="@color/grey_900"
        android:textSize="@dimen/sp_14"
        app:layout_constraintTop_toBottomOf="@+id/user_logo" />

    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button"
        android:drawableRight="@mipmap/ic_next"
        android:layout_marginTop="@dimen/dp_1"
        android:padding="@dimen/dp_16"
        android:text="我的提问"
        android:textColor="@color/grey_900"
        android:textSize="@dimen/sp_14"
        app:layout_constraintTop_toBottomOf="@+id/collection" />

    <TextView
        android:id="@+id/about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_1"
        android:background="@drawable/bg_button"
        android:drawableRight="@mipmap/ic_next"
        android:padding="@dimen/dp_16"
        android:text="关于"
        android:textColor="@color/grey_900"
        android:textSize="@dimen/sp_14"
        app:layout_constraintTop_toBottomOf="@+id/question" />


    <Button
        android:id="@+id/btn_login_out"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="@dimen/dp_220"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_16"
        android:text="退出登录"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about" />

</androidx.constraintlayout.widget.ConstraintLayout>